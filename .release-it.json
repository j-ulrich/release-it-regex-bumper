{
	"hooks": {
		"before:init": "npm test"
	},
	"plugins": {
		"./index.js": {
			"out": [
				{
					"files": [ "README.md", "LICENSE" ],
					"search": {
						"pattern": "\\b([Cc])opyright (.*?)(\\d{4}-)?(\\d{4})",
						"flags": "g"
					},
					"replace": "$1opyright $2${3}{{now:yyyy}}"
				}
			]
		},
		"@release-it/keep-a-changelog": {
			"head": "main",
			"addVersionUrl": true,
			"versionUrlFormats": {
				"versionUrl": "{repositoryUrl}/releases/tag/{tagName}"
			}
		}
	}
}