{
	"extends": [
		"@j-ulrich"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": false,
			"experimentalObjectRestSpread": false
		}
	},
	"env": {
		"node": true,
		"es6": true
	},
	"rules": {
		"security/detect-non-literal-fs-filename": "off"
	}
}